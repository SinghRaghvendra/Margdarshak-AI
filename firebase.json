{
  "apphosting": {
    "backendId": "studio",
    "location": "asia-south1",
    "rootDir": ".",
    "alwaysDeployFromSource": true,
    "ignore": [
      "node_modules",
      ".git",
      ".next",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  },

  "firestore": {
    "database": "(default)",
    "location": "asia-south2",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "storage": {
    "rules": "storage.rules",
    "bucket": "margdarshak-ai.firebasestorage.app"
  }
}
