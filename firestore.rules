rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection:
    // - Allow users to read and update their own document.
    // - Allow authenticated users to create their own document (signup).
    // - Deny all other access (e.g., deleting or reading other users' data).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Generated Reports Collection:
    // - Allow users to list and read reports only if they are the owner.
    // - Allow authenticated users to create new reports.
    // - Deny updates and deletes to preserve report history.
    match /generatedReports/{reportId} {
      allow get, list: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if request.auth != null;
      allow update, delete: if false; // Reports are immutable
    }
  }
}
